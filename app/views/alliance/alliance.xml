<Page
  xmlns:widgets="shared/widgets"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:IC="nativescript-web-image-cache"
  navigatingTo="pageLoaded"
  id="alliance">

  <Page.actionBar>
    <ActionBar>
      <StackLayout orientation="horizontal"
        ios:horizontalAlignment="center"
        android:horizontalAlignment="left">
        <Image src="res://nativescript_logo" class="action-image"></Image>
        <Label text="{{ abbreviation }}"  id="title" class="action-label"></Label>
      </StackLayout>
    </ActionBar>
  </Page.actionBar>

  <drawer:RadSideDrawer id="drawer" drawerLocation="Left" drawerContentSize="110">

    <!-- The main content -->
    <drawer:RadSideDrawer.mainContent>
      <StackLayout>
        <ScrollView orientation="vertical">
          <StackLayout orientation="vertical">
            <!-- ACTUAL_CONTENT -->
            <IC:WebImage src="{{ logo }}"/>
            <Label text="{{ 'Name: ' + name }}" textWrap="true" />
            <Label text="{{ memberCount + ' members' }}" onTap='loadMemberPage'/>
            <Label text="{{ 'Slack Channel: #' + slack_channel }}" visibility="{{ !!slack_channel ? 'visible' : 'collapsed' }}" textWrap="true" onTap='loadSlack'/>
          </StackLayout>
        </ScrollView>
      </StackLayout>
    </drawer:RadSideDrawer.mainContent>

    <!-- The drawer content -->
    <drawer:RadSideDrawer.drawerContent>
      <widgets:navigation />
    </drawer:RadSideDrawer.drawerContent>

  </drawer:RadSideDrawer>

</Page>