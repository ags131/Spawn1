<Page
  xmlns:widgets="shared/widgets"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  navigatingTo="pageLoaded"
  navigatingFrom="pageUnloaded"
  id="VIEWNAME">

  <Page.actionBar>
    <widgets:header />
  </Page.actionBar>

  <drawer:RadSideDrawer id="drawer" drawerLocation="Left" drawerContentSize="170">

    <!-- The main content -->
    <drawer:RadSideDrawer.mainContent>
        <StackLayout orientation="vertical">

          <!-- ACTUAL_CONTENT -->

          <grid-layout columns="*" rows="*,auto">
           <ListView
             row="0"
             column="0"
             id="console_list"
             items="{{ messages }}"
             class="listview console console_background"
             separatorColor="#2b2b2b"
             >
             <ListView.itemTemplate>
               <HtmlView html="{{ message }}" class="console_output {{ type }}" textWrap="true" verticalAlignment="top"/>
             </ListView.itemTemplate>
           </ListView>

           <TextField hint="" class="console_background" row="1" col="0" text="" id="message_input" textWrap="true"></TextField>
           <Button row="1" class="console_background" col="1" text="Send" onTap="sendConsoleCommand" horizontalAlignment="right"></Button>


         </grid-layout>

        <Label text="console!" />




        </StackLayout>
    </drawer:RadSideDrawer.mainContent>

    <!-- The drawer content -->
    <drawer:RadSideDrawer.drawerContent>
      <widgets:navigation />
    </drawer:RadSideDrawer.drawerContent>

  </drawer:RadSideDrawer>

</Page>